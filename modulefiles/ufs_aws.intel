#%Module

proc ModulesHelp {} {
  puts stderr "\tcit - loads modules required for building and running UFS Model on Jet/Intel"
}

module-whatis "loads UFS Model prerequisites for AWS/Intel"

module use /shared/apps/hpc-stack/modulefiles/stack

module load hpc/1.2.0
module load hpc-intel/2022
module load hpc-impi/2022

module load cmake/3.20.1

module load ufs_common

setenv CC mpiicc
setenv CXX mpiicpc
setenv FC mpiifort
setenv CMAKE_Platform aws.intel
